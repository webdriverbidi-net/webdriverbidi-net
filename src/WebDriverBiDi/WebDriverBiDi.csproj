<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net8.0;net9.0;net10.0</TargetFrameworks>
    <LangVersion>14</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>WebDriverBiDi.snk</AssemblyOriginatorKeyFile>
    <Version>0.0.40-beta.1</Version>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>WebDriverBiDi-Relaxed</PackageId>
    <Authors>WebDriverBiDi.NET-Relaxed Committers</Authors>
    <Company>WebDriverBiDi.NET-Relaxed Committers</Company>
    <Title>WebDriver BiDirectional Client Library (Relaxed)</Title>
    <Description>A .NET client library for the WebDriver BiDi protocol (Relaxed version).</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/hardkoded/webdriverbidi-net-relaxed</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="StyleCop.Analyzers" Version="1.2.0-beta.556">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="System.Text.Json" Version="10.0.0" />
    <PackageReference Include="System.Threading.Channels" Version="10.0.0" />
  </ItemGroup>
  <ItemGroup>
    <AdditionalFiles Include=".stylecop.json" />
    <AdditionalFiles Include="WebDriverBiDi.snk" />
    <None Include="README.md" Pack="true" PackagePath="/"/>
  </ItemGroup>

</Project>
